@model ZenithWebsite.Models.UserRolesViewModel.EditUserRoleViewModel

@{
    ViewData["Title"] = "Add Roles";
}

<h2>Add Roles</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Event</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="control-label col-md-2">Role To Be Added</label>
            <div class="col-md-10">
                <select asp-for="SelectedRole" class="form-control" asp-items="ViewBag.Roles"></select>
                <span asp-validation-for="SelectedRole" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>